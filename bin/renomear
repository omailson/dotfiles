ajuda() {
    echo "Usos:"
    echo "    renomear -x arquivo.ext txe - Modifica a extensão para txe"
    echo "    renomear -b arquivo.ext file - Modifica apenas o basename, mantendo a extensão"
    echo "    renomear arquivo.ext file.txe - Renomeia todo o nome do arquivo. O mesmo que usar mv arquivo.ext file.txe"
}

